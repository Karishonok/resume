{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div class="row p-3">
	{{#with main}}
	<main>
		<section class="mb-5">
			<div>
				{{> title data=summary.title big=true}}
			</div>
			<div class="card text-bg-light">
				<div class="card-body">
					<p>
						{{summary.text}}
					</p>
				</div>
			</div>
		</section>

		{{#with experience}}
		<section>
			<div>
				{{>title data = title}}
			</div>
			<div class="card text-bg-light">
				<div class="card-body">
					<p>
						{{text}}
					</p>
				</div>
			</div>
		</section>
		{{/with}}
	</main>
	{{/with}}



</div>

