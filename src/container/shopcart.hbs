<div>
    <div class="mt-5 mb-3 col-2">
        {{#with header}}
        <h3>{{title}}</h3>
    </div>
    <div class="row mb-5">
        <div class="col-3">
            {{#with button}}
            <a href="{{link}}" class="btn btn-outline-secondary">{{text}}</a>
            {{/with}}
            {{/with}}
        </div>
    </div>
    <div>
        <hr>
    </div>
    {{> cartGoodsItem}}
    <div>
        <hr>
    </div>
    <div>
        {{#with total}}
        <h5>{{title}}</h5>
        <h4>{{amount}}</h4>
        <p>{{delivery}}</p>
        {{#each buttons}}
        <div class="my-3">
            {{#if isSuccess}}<a href="{{link}}" class="btn btn-success">{{text}}</a>{{/if}}
            {{#if isOutline}}<a href="{{link}}" class="btn btn-outline-success">{{text}}</a>{{/if}}
        </div>
        {{/each}}
        {{/with}}
    </div>
    <div class="my-5">
        <hr>
    </div>
    <div class="row">
        {{#with goodsOtherBlock}}
        <h2 class="text-center mb-3">{{title}}</h2>
        {{> shopcard}}
        {{/with}}
    </div>
    <div>
        <hr>
    </div>
    {{#with subscribe}}
    <div class="col-12">
        <div class="card my-5">
            <div class="card text-bg-dark">
                <h2 class="pt-2">{{header}}</h2>
                <p class="pt-2">{{description}}</p>
                {{#each buttons}}
                <div class="my-2">
                    <a href="{{link}}" class="btn btn-primary">{{text}}</a>
                    {{/each}}
                </div>
            </div>
        </div>
    </div>
    {{/with}}
</div>